{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Liveblocks"]
  },
  "files": {
    "ignore": [
      "packages/design-system/components/ui/**",
      "packages/design-system/lib/**",
      "packages/design-system/hooks/**",
      "packages/collaboration/config.ts",
      "apps/docs/**/*.json",
      "apps/email/.react-email/**"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off",
        "useSelfClosingElements": "info",
        "useNumberNamespace": "info"
      },
      "suspicious": {
        "noConsoleLog": "off",
        "noConsole": "off",
        "useAwait": "off",
        "noGlobalIsNan": "off",
        "noExplicitAny": "info"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useValidAnchor": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "info",
        "noUnusedVariables": "info"
      }
    }
  }
}
